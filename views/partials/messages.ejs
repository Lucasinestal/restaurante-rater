<% if(typeof errors != 'undefined') { %>
    <% errors.forEach(function(error) { %>
        <div class="mt-3 mb-0 alert alert-warning alert-dismissible fade show" role="alert">
            <%= error.msg %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% }); %>
    <% } %>
    
    <% if(success_msg != '') { %>
        <div class="mt-3 mb-0 alert alert-success alert-dismissible fade show" role="alert" id="alert">
            <%= success_msg %>
            <button type="button" class="close" data-dismiss="alert"  data-target="#alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
    <% } %>
    
    <% if(error_msg != '') { %>
        <div class="mt-3 mb-0 alert alert-warning alert-dismissible fade show" id="alert" role="alert">
            <%= error_msg %>
            <button type="button" class="close" data-dismiss="alert"  data-target="#alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
    <% } %>
    
    <% if(error != '') { %>
      <div class="mt-3 mb-0 alert alert-warning alert-dismissible fade show" id="alert" role="alert">
          <%= error %>
          <button type="button" class="close" data-dismiss="alert" data-target="#alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
    <% } %>
    