<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet"href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css"/>
    <link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous"/>
    <link href="/public/feed.css" rel="stylesheet" type="text/css"/>
</head>
<body>
    <div id="loginContainer" class="d-flex">
        <div id="loginSection"
            class="p-5 login-section bg-grey text-white rounded d-flex flex-column justify-content-center align-items-center shadow">
            <div>
                <h2>Log in</h2>
            </div>
            <%- include ('./partials/messages.ejs') %>
            <form autocomplete="off" class="form-group d-flex flex-column justify-content-center align-items-center"
                action="/login" method="POST">
                <div>
                    <input autocapitalize="sentences" class="mt-5 form-control" placeholder="Name" type="username" name="username" id="userName">
                </div>
                <div>
                    <input class="mt-3 form-control" placeholder="Password" type="password" name="password"
                        id="userPassword">
                </div>
                <button id="logInBtn" class="btn btn-primary w-50 m-5">Login</button>
                <div>
                    <p>Don't have an account? <a class="text-primary" href="/register">Register now</a></p>
                </div>
            </form>
        </div>
    </div>
</body>
</html>